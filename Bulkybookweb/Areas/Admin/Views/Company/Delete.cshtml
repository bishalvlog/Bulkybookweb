@model BulkyBook.Models.Company;
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete" asp-controller="Company">
    <div class="row">
        <div class="col-10">
             <div class="mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" rows="3" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" rows="3" class="form-control"/>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="StreetAddress"></label>
                <input asp-for="StreetAddress" rows="3" class="form-control"/>
                <span asp-validation-for="StreetAddress" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="City"></label>
                <input asp-for="City" rows="3" class="form-control"/>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="State"></label>
                <input asp-for="State" rows="3" class="form-control"/>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PostalCode"></label>
                <input asp-for="PostalCode" rows="3" class="form-control"/>
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
                
        </div>
            
        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary" style="width:150px">Back to List</a>

    </div>

</form>



