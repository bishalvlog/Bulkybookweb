@model IEnumerable<BulkyBook.Models.Category>
@{
    ViewData["Title"] = "Category";
}
<partial name="Notification" /> 
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create new Category
            </a>
        </div>
        test
    </div>
</div>
<form>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Category
                </th>
                <th>
                    DisplayOrder
                </th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td width="50%">
                        @i.Name
                    </td>
                    <td width="30%">
                        @i.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@i.Id" class="btn btn-primary">
                                <i class="bi bi-pencil"></i>
                                Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@i.Id" class="btn btn-danger">
                                <i class="bi bi-trash3"></i>
                                Delete
                            </a>

                        </div>
                    </td>
                 
                </tr>
            }
        </tbody>
    </table>
</form>



